<XButton
    Color="Color.Primary"
    Title="@Title"
    OnClick="@OnClick"
    ButtonType="@ButtonType"
    FullWidth="@FullWidth"
    Variant="@Variant"
    Size="@Size"
    StartIcon="@StartIcon"
    Style="@Style"
    EndIcon="@EndIcon"
    IconColor="@IconColor"
    IconSize="@IconSize"
    IconClass="@IconClass"
    Disabled="@Disabled"
    DisableElevation="@DisableElevation"
    DisableRipple="@DisableRipple"
    Class="@Class">

    @ChildContent

</XButton>

@code {

    protected override void OnInitialized()
    {
        ButtonType = ButtonType.Submit;
        base.OnInitialized();
    }

}